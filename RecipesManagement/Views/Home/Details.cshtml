@model HomeDetailsViewModel

@{ 
    ViewBag.Title = "Recipe Details";
    var photoPath = "~/Images/" + (Model.Recipe.PhotoPath ?? "noimage.jpg");
}

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Recipe.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                    <h4>Recipe ID : @Model.Recipe.Id</h4>
                    <h4>Recipe Source : @Model.Recipe.Source</h4>
                    @*<h4>Ingredient : @Model.Recipe.Ingredient</h4>*@
                    <h4>Preparation Time : @Model.Recipe.Time</h4>
                    <h4>Preparation Instructions : @Model.Recipe.Preparation</h4>

                </div>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index" 
                       class="btn btn-primary">Back</a>
                    <a asp-action="edit" asp-controller="home" asp-route-id="@Model.Recipe.Id"
                       class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>

@section Scripts 
 {
    <script src="~/js/CustomScript.js"></script>
 }

