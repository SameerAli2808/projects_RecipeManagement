@model List<Recipe>

@{
    ViewBag.Tilte = "Recipe List";
}


    <div class="card-deck">
        @foreach (var recipe in Model)
        {
            var photoPath = "~/Images/" + (recipe.PhotoPath ?? "noimage.jpg");

            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@recipe.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@recipe.Id" 
                       class="btn btn-primary m-1">View</a>
                    <a asp-action="edit" asp-controller="home" asp-route-id="@recipe.Id"
                       class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
